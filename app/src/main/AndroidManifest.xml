<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.app.erl">

    <application
        android:name="com.app.erl.ERLApp"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:allowBackup">

        <activity
            android:name="com.app.erl.view.activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
                <!--<category android:name="android.intent.category.DEFAULT" />-->
                <!--<category android:name="android.intent.category.BROWSABLE" />-->

                <!--<data-->
                <!--android:host="newtime.owlmanagementsystems.com"-->
                <!--android:path="/"-->
                <!--android:scheme="http" />-->
                <!--<data android:scheme="app" android:host="com.app.chaikichuski" />-->

            </intent-filter>
        </activity>

        <activity
            android:name="com.app.erl.view.activity.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.app.erl.view.activity.SignUpActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.app.erl.view.activity.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.app.erl.view.activity.VerificationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.app.erl.view.activity.CreateNewPasswordActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.app.erl.view.activity.DashBoardActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.app.erl.view.activity.SelectOrderItemsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.app.erl.view.activity.CreateOrderActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.app.erl.view.activity.AddAddressActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.app.erl.view.activity.SelectAddressActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.app.erl.view.activity.MyOrderListActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.app.erl.view.activity.MyOrderDetailsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.app.erl.view.activity.MyProfileActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.app.erl.view.activity.CropImageActivity"
            android:screenOrientation="portrait" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true"
            tools:replace="android:authorities">

            <meta-data
                android:name="android.support.FILE_PROVIDE_PATHS"
                android:resource="@xml/provider_paths" />

            <!--<path-permission-->
            <!--android:pathPrefix="/all_downloads"-->
            <!--android:permission="android.permission.ACCESS_ALL_DOWNLOADS" />-->

        </provider>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_key_api" />

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.WRITE_GSERVICES" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>