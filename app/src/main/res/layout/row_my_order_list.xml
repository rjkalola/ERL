<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="info"
            type="com.app.erl.model.entity.info.OrderInfo" />
    </data>

    <LinearLayout
        android:id="@+id/routMainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/SmallFontTextView"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/lbl_order_number"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/txtOrderNUmber"
                        style="@style/SmallFontTextView"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@{info.order_no}"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/SmallFontTextView"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/lbl_status"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/txtStatus"
                        style="@style/SmallFontTextView"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@{info.status}"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/SmallFontTextView"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/lbl_date"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/txtDate"
                        style="@style/SmallFontTextView"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@{info.pickup_date}"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/SmallFontTextView"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/lbl_price"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/txtPrice"
                        style="@style/SmallFontTextView"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/SmallFontTextView"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/lbl_number_of_paces"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/txtNumberOfPaces"
                        style="@style/SmallFontTextView"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/routVieMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/SmallFontTextView"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/lbl_view_more"
                        android:textColor="@color/colorYellowDark"
                        android:textSize="@dimen/_11ssp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:textSize="@dimen/_11ssp"
                        android:tint="@color/colorYellowDark"
                        app:srcCompat="@drawable/ic_arrow_forward" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/Divider"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@color/colorYellowDark" />

    </LinearLayout>
</layout>


