<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/routMainView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_1sdp">

        <com.app.erl.util.SquareImageViewByWidth
            android:id="@+id/imgAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/imgAlbum"
            android:layout_alignTop="@+id/imgAlbum"
            android:layout_alignEnd="@+id/imgAlbum"
            android:layout_alignBottom="@+id/imgAlbum"
            android:background="#80000000">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtPhotosCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:shadowColor="#000"
                    android:shadowRadius="4.0"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/txtAlbumTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:shadowColor="#000"
                    android:shadowRadius="4.0"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</layout>